<h2>Listing Containers</h2>

<table class="table">
  <thead>
    <tr>
      <th>Job no</th>
      <th>Job</th>
      <th>Name</th>
      <th>Status</th>
      <th>Trailers</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for container <- @containers do %>
    <tr>
      <td><%= container.job_no %></td>
      <td><%= container.job_id %></td>
      <td><%= container.name %></td>
      <td><%= container.status %></td>
      <td><%= container.trailer_no %></td>

      <td class="text-right">
        <span><%= link "Show", to: container_path(@conn, :show, container), class: "btn btn-default btn-xs" %></span>
        <span><%= link "Edit", to: container_path(@conn, :edit, container), class: "btn btn-default btn-xs" %></span>
        <span><%= link "Delete", to: container_path(@conn, :delete, container), method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-danger btn-xs" %></span>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<span><%= link "New Container", to: container_path(@conn, :new) %></span>
